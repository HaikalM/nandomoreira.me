a
  color $link-color
  text-decoration underline
  transition background-color 0.15s ease, color 0.15s ease, outline 0.1s ease
  border 0
  &:hover,
  &:active,
  &:focus
    text-decoration none
  &:focus
    outline 3px solid rgba($mint-color, 0.7)
    outline-offset 2px

em
  font-style italic

strong, b
  font-weight $font-weight-bold

small
  font-size 80%

big
  font-size 150%

h1, h2, h3, h4, h5, h6,
p, dl, table, blockquote, figcaption
  margin 0 0 $spacing-small 0
  &:last-child
    margin-bottom 0

h1, h2, h3, h4, h5, h6
  color $feldgrau-color
  letter-spacing -1*0.01rem
  font-weight $font-weight-normal
  font-family $font-family-heading
  margin-top $spacing-base
  a
    color inherit
    text-decoration none
    border 0

h1
  font-size 2.2rem
  line-height 1.2

h2
  font-size 1.8rem
  line-height 1.25

h3
  font-size 1.6rem
  line-height 1.3

h4
  font-size 1.4rem
  line-height 1.35

h5,
h6
  font-size 1rem
  letter-spacing 0
  line-height 1.4

sub
  font-size 0.8em
  position relative
  top 0.5em

sup
  font-size 0.8em
  position relative
  top -1*0.5em

ul, ol
  padding-left $spacing-small
  margin-bottom $spacing-small
  p
    margin 0
  li > ul,
  li > ol
    margin-bottom $spacing-mini

figcaption
  text-align center
  font-style italic
  line-height $line-height-base
  font-size $font-size-small

blockquote
  color $davys-grey-color
  font-size $font-size-big
  margin-top $spacing-base
  margin-bottom $spacing-base
  line-height 1.4
  p
    font-weight $font-weight-light
  & *:last-child
    margin 0

pre,
code
  font-family $font-family-monospace

code
  background rgba($davys-grey-color, 0.05)
  border-radius $border-radius-base
  color inherit
  margin 0 0.2rem
  padding 0.2rem 0.5rem
  font-size $font-size-small
  white-space nowrap

pre
  background rgba($davys-grey-color, 0.05)
  padding 0 $spacing-mini / 2
  & > code
    font-size inherit
    background transparent
    border-radius 0
    display block
    padding $spacing-mini $spacing-mini
    white-space pre
