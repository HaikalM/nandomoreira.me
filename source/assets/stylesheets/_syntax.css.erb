<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>

.highlight {
  padding: 1.25rem;
  margin-bottom: 1.875rem;
  border: none;
  overflow-x: auto;
  border-radius: 0;
}

.highlight,
.highlight pre {
  background-color: #2d3643;
}

.highlight code {
  font-size: 1rem;
  font-weight: 300;
  padding: 0;
  margin: 0;
}

.highlight.sass .err {
  background-color: transparent;
}
